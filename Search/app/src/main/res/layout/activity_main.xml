<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <EditText
       android:id="@+id/edit_number"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:inputType="number"
       android:ems="16"
       android:hint="Nhập dãy số, cách nhau bằng dấu phẩy"
       android:textSize="16sp"
       android:layout_marginTop="8dp"
       tools:layout_editor_absoluteX="18dp"
       tools:layout_editor_absoluteY="30dp"
       android:digits="0123456789," />

   <EditText
       android:id="@+id/edit_search_number"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:inputType="number"
       android:ems="10"
       android:hint="Nhập số muốn search"
       android:textSize="16sp"
       android:layout_marginTop="8dp"
       tools:layout_editor_absoluteX="18dp"
       tools:layout_editor_absoluteY="30dp" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp">
      <CheckBox
          android:id="@+id/cb_binary_search"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="BinarySearch"
          android:textSize="16sp"/>

      <CheckBox
          android:id="@+id/cb_linear_search"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="LinearSearch"
          android:textSize="16sp"
          />

   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp">
      <Button
          android:id="@+id/btn_search"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginLeft="5dp"
          android:text="Tìm kiếm" />

      <Button
          android:id="@+id/btn_random_array"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="Random chuỗi"
          android:layout_marginLeft="5dp" />
   </LinearLayout>


   <TextView
       android:id="@+id/tv_result"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:text="Kết quả sẽ xuất hiện ở đây"
       android:textSize="16sp"
       android:layout_marginLeft="5dp"/>
</LinearLayout>